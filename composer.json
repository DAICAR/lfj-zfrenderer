{
    "name" :       "lorenzoferrarajr/lfj-zfrenderer",
    "description": "A utility to render PHP view scripts using the Zend Framework 2 PhpRenderer",
    "type":        "library",
    "license":     "MIT",
    "homepage":    "https://github.com/lorenzoferrarajr/lfj-zfrenderer",
    "authors": [
        {
            "name":     "Lorenzo Ferrara",
            "email":    "lorenzoferrarajr@gmail.com",
            "homepage": "http://lorenzoferrara.net/"
        }
    ],
    "require": {
        "php": ">=5.5",
        "zendframework/zend-view":           ">=2.3",
        "zendframework/zend-servicemanager": ">=2.3",
        "zendframework/zend-filter":         ">=2.3"
    },
    "require-dev": {
        "phpunit/PHPUnit": "~4.6"
    },
    "autoload": {
        "psr-0": {
            "Lfj\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-no-shared-events": "0.0.x-dev"
        }
    }
}
